<header>
    <nav class="nav">
        <a href="/"><img class="logo" src="/img/index/—Pngtree—football_799345.png" alt="Logo"></a>
        <a href="/"><h1 class="sports">K2Sports</h1></a>
        <div class="search">
            <input type type="text" id="buscar" name="buscar" class="buscar" placeholder="O que você procura?">
            <button class='button' id="button"><i class="fa fa-search"></i></button>
        </div>
        <% if (user.usuario == null || user.usuario == undefined) { %> 
            <div class="usuario">
                <a href="/carrinho"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                <i class="fa fa-user"></i>
                <a href="/login"><p>Login</p></a>
            </div>
            <% } else { %> 
            <div class="usuario">
                <!-- <i class="fa fa-user"></i> -->
                <p>Olá, <%= user.usuario  %> </p>
                <a href="/carrinho" class="espaco"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                <a href="/logout">Sair</a>
            </div>
        <% } %> 
    </nav>
</header>