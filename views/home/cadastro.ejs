<body>

    <%- include('../partials/header') %>

        <main>
            <nav>
                <ul class="links">
                    <li><a href="loja.html">Loja</a></li>
                    <li><a href="brasileiros.html">Brasileiros</a></li>
                    <li><a href="internacionais.html">Internacionais</a></li>
